#! /bin/sh

set -e

if [ "$1" = "configure" ]; then
	. /usr/share/debconf/confmodule

	db_get samba/setup-pdc || true

	if [ "$RET" = "true" ]; then
		db_get samba/realm
		REALM="$RET"

		db_get samba/domain
		DOMAIN="$RET"

		db_get samba/password
		PASSWORD="$RET"

		db_stop

		/usr/lib/samba/setup/provision --realm="$REALM" --domain="$DOMAIN" --adminpass="$PASSWORD"
	else
		db_stop
	fi
fi

#DEBHELPER#

exit 0
